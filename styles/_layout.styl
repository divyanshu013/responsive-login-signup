header
  align-self flex-start
  margin-left 10px
  padding-left 10px

footer
  align-self center
  margin 10px
  padding 10px

.wrapper
  display flex
  flex-direction column
  justify-content space-between
  height 100vh

.content
  align-self center
  display flex
  align-content space-between

.seperator
  align-self center
  margin 10px
  padding 10px

form
  display flex
  flex-direction column

button
  align-self flex-start

@media all and (max-width:500px)
  header
    align-self center

  .wrapper
    height auto

  .content
    flex-direction column

  button
    align-self center

  .seperator
    align-self center
    margin 0
    padding 0
